<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery - Hari's Portfolio</title>
    <!-- <link rel="stylesheet" href="/css/styles.css"> -->
    <link rel="stylesheet" href="/css/gallerypages.css">
    <script>
        window.addEventListener('click', event => {
        if (event.target.matches('video')) {
            event.stopPropagation();
        }
        }, true);
        // When the user clicks on <div>, open the popup
        function myFunction(title) {
          var popup = document.getElementById(title);
          popup.style.display = "block";
        }
        function closePopup(title){
            var popup = document.getElementById(title);
            popup.style.display = "none";
        }
        </script>
</head>
<body>
    <!-- <%- include('partials/navbar') %> -->
    <header>
        <nav class="navbar">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/gallery">Gallery</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </nav>
        <h1><%=page %></h1>
    </header>
    <div class="card-container">
        <% mediaItems.forEach(media => { %>
            <div class="card" onclick="myFunction('<%= media.title %>')">
                <% if (media.type === 'video') { %>
                    <video src="<%= media.link %>" controls></video>
                <% } else if (media.type === 'image') { %>
                    <img src="<%= media.link %>" alt="<%= media.title %>">
                <% } else { %>
                    <iframe width="420" height="315" src="<%= media.link %>" alt="<%= media.title %>"></iframe> 
                <% } %>
            </div>
        <% }) %>
    </div>
    <% mediaItems.forEach(media => { %>
        <div class="popupMedia" id="<%= media.title %>">
            <% if (media.type === 'video') { %>
                <video src="<%= media.link %>" controls></video>
            <% } else if (media.type === 'image') { %>
                <img src="<%= media.link %>" alt="<%= media.title %>">
            <% } else { %>
                <iframe width="420" height="315" src="<%= media.link %>" alt="<%= media.title %>"></iframe> 
            <% } %>
            <p onclick="closePopup('<%= media.title %>')">close</p>
        </div>
    <% }) %>    
</body>
</html>
