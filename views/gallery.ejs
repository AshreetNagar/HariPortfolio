<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery - Hari's Portfolio</title>
    <link rel="stylesheet" href="/css/oldstyles.css">
    <link rel="stylesheet" href="/css/gallery.css">
</head>
<body>
    <%- include('partials/navbar') %>
    <h1>Gallery</h1>
    <div class="card-container">
        <% mediaItems.forEach(media => { %>
            <div class="card" >
                <h2 class="card-title"><%= media.title %></h2>
                <p class="card-tags"><%= media.tags.join(', ') %></p>
                <% if (media.type === 'video') { %>
                    <video src="<%= media.link %>" controls></video>
                <% } else if (media.type === 'image') { %>
                    <img src="<%= media.link %>" alt="<%= media.title %>">
                <% } else { %>
                    <iframe width="420" height="315" src="<%= media.link %>" alt="<%= media.title %>"></iframe> 
                <% } %>
            </div>
        <% }) %>
    </div>
</body>
</html>
